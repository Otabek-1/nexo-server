APP_ENV=dev
APP_NAME=Nexo API
API_PREFIX=/api/v1
DEBUG=true
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000

# Option A (recommended): provide a full URL
DATABASE_URL=

# Option B: provide parts (used when DATABASE_URL is empty)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexo
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable

REDIS_URL=redis://localhost:6379/0

JWT_SECRET_KEY=change-me-access
JWT_REFRESH_SECRET_KEY=change-me-refresh
JWT_ACCESS_TTL_MIN=15
JWT_REFRESH_TTL_DAYS=30

STORAGE_PROVIDER=local
STORAGE_LOCAL_DIR=./storage
STORAGE_SIGN_TTL_SECONDS=900
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_MIME=image/png,image/jpeg,image/jpg,image/webp,image/gif,image/svg+xml,video/mp4

S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=nexo
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_PUBLIC_BASE_URL=

SENTRY_DSN=
